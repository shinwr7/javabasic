package polymorphism.game;

public class Main {
	public static void main(String[] args) {
		
		Player p1 = new Player ();
		Monster d1 = new Dragon(50, 5, 3) ;
		Monster e1 = new DarkElf(80, 8, 1) ;
		
		p1.hunt(d1);
		p1.hunt(d1);
		p1.hunt(d1);
		p1.getPlayerInfo();
		d1.getMonsterInfo();
		
		p1.hunt(e1);
		p1.hunt(e1);
		p1.hunt(e1);
		p1.getPlayerInfo();
		e1.getMonsterInfo();
	}
}
