package interaction.game;

public class Dragon {
	
	private int hp, def, atk;
	
	
	public Dragon () {
		hp = 50;
		def = 4;
		atk = 10;
		
	}
	
	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public void battleWithWarrior (Warrior a) {
		a.setHp(a.getHp()-(atk-a.getDef()));
	}
}
