package constructor;

public class BasketballPlayer {

	public int height;
	public int jump;
	public String team;
	public int hp;
	
	public BasketballPlayer(int h, int j, String t, int s) {
		height =h;
		jump =j;
		team =t;
		hp = s;
		System.out.println("선수 정보");
		System.out.println("키 :"+h);
		System.out.println("점프력 :"+j);
		System.out.println("소속팀 :"+t);
		System.out.println("체력 :"+ s);
		
		}
	public void status() {
		System.out.println("현재 체력 :" + hp);
	}
	public void dunk() {
		
		if(height+jump>=300) {
			
			System.out.println("덩크슛 성공");
			System.out.println("---------------");
		}
		else {
			System.out.println("덩크슛 실패");
			System.out.println("---------------");
	}
		if (hp>0) {
			hp-=30;
		}
		status();
		
		if (hp<0){
			hp +=0;
			System.out.println("덩크 불가");
			System.out.println("선수 탈진");
			
		}
		
	}
	
	
}

