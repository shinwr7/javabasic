package constructor;

public class BasketballPlayer {

	public int height;
	public int jump;
	public String team;
	
	public BasketballPlayer(int h, int j, String t) {
		height =h;
		jump =j;
		team =t;
		System.out.println("선수 정보");
		System.out.println("키 :"+h);
		System.out.println("점프력 :"+j);
		System.out.println("소속팀 :"+t);
		}
	
	public void dunk() {
		
		if(height+jump>=300) {
			
			System.out.println("덩크슛 성공");
			System.out.println("---------------");
		}
		else {
			System.out.println("덩크슛 실패");
			System.out.println("---------------");
	}
	}
	
	
}

