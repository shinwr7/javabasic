package polymorphism.game;

public class Monster {
	private int hp, atk, def;
	
	public Monster (int hp,int atk,int def) {
		this.hp = hp;
		this.atk=atk;
		this.def=def;
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}
	
	public void battle(int patk, int pdef, int php) {
		if(this.atk<=pdef) {
			System.out.println("플레이어의 방어력이 높습니다.");
			System.out.println("몬스터가 피해를 입힐 수 없습니다.");
			return;
		}
		php=php-(atk-pdef);
		
		
	}
}
