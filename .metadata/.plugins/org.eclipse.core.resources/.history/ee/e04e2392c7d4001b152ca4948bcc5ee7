package interaction.game;

public class Dragon {
	
	private int hp, def, atk;
	
	
	public Dragon () {
		hp = 50;
		def = 4;
		atk = 10;
		
	}
	
	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public void battleWithWarrior (Warrior w,int hp) {
		hp = this.hp;
		if(this.hp<0) {
			System.out.println("드래곤이 사망하였습니다.");
		}
		w.setHp(getHp()-(atk-def));
		System.out.println("드래곤이 "+(atk-def)+"만큼의 피해를 입혔습니다.");
		
		
		
		if(w.getHp()<0) {
			System.out.println("드래곤이 전사를 살해");
			return;
		}
		
	}
	public void getDragonInfo() {
		System.out.println("-----드래곤 상태-----");
		System.out.println("체력 : "+ hp);
		System.out.println("방어력 : "+ def);
		System.out.println("공격력 : "+ atk);
	}
}
