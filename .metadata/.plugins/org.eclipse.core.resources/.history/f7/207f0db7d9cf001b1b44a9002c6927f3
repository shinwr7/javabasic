
public class EnhancedFor2 {
	public static void main(String[] args) {
		//다음은 학생들의 과목별 성적입니다. 
		//math = 96, 23, 52, 82, 72, 31, 58
		//eng = 62, 42, 68, 31, 80, 77, 45
		//com = 10, 28, 39, 74, 65, 90, 98
		//위 3개의 명칭으로 array를 만들어 담아주신 다음
		//과목별 평균점수를 enhanced for문을 이용해 구한 다음
		// 콘솔창에 출력해줘
		
		int [] math = {96, 23, 52, 82, 72, 31, 58};
		int [] eng = {62, 42, 68, 31, 80, 77, 45};
		int [] com = {10, 28, 39, 74, 65, 90, 98};
			
		
		int sum = math[0]+math[1]+math[2]+math[3]+math[4]+math[5]+math[6]
				
			for(int a =0;a<math.length;a++) {
				System.out.println
			}
			for(int b =0;b<eng.length;b++) {
				System.out.println((math[0]+math[1]+math[2]+math[3]+math[4]+math[5]+math[6])/math.length);
			}
			for(int c =0;c<com.length;c++) {
				System.out.println((math[0]+math[1]+math[2]+math[3]+math[4]+math[5]+math[6])/math.length);
			}
	}}

